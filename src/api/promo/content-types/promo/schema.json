{
  "kind": "collectionType",
  "collectionName": "promos",
  "info": {
    "singularName": "promo",
    "pluralName": "promos",
    "displayName": "Promo",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "code": {
      "type": "string",
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "promos"
    },
    "discount": {
      "type": "decimal",
      "required": true
    },
    "discountIsPercentage": {
      "type": "boolean",
      "required": true
    },
    "clients": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::client.client",
      "inversedBy": "promos"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "perAmount": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "maxUsesTotal": {
      "type": "integer"
    },
    "maxUsesPerClient": {
      "type": "integer"
    }
  }
}
