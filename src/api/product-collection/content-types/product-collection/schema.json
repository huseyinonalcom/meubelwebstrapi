{
  "kind": "collectionType",
  "collectionName": "product_collections",
  "info": {
    "singularName": "product-collection",
    "pluralName": "product-collections",
    "displayName": "ProductCollection",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "product_collection"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "text"
    }
  }
}
